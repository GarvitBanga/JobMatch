{
  "manifest_version": 3,
  "name": "JobMatch - AI Resume Matcher",
  "version": "1.0.0",
  "description": "AI-powered job scanner that matches your resume against job postings on career sites. Get relevance scores and find your perfect role faster.",
  "author": "JobMatch Team",
  "homepage_url": "https://github.com/yourusername/jobmatch",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "https://jobmatch-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "JobMatch - AI Resume Matcher",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "*.html"],
      "matches": ["<all_urls>"]
    }
  ]
} 